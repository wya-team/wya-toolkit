{
  "name": "@wya/toolkit",
  "version": "1.1.0",
  "description": "wya-toolkit for js",
  "main": "index.js",
  "files": [
    "commands/**",
    "bin/**",
    "keys/**",
    "templates/**"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run all",
    "serve": "rm -rf ./commands && cross-env NODE_ENV=development babel src --out-dir commands --copy-files --ignore **.test.js,**.md,examples/** --watch",
    "build": "rm -rf ./commands && npm run lint:fix && cross-env NODE_ENV=production babel src --out-dir commands --copy-files --ignore **.test.js,**.md,examples/**,  && npm publish --access public",
    "lint": "esw ./src/ ./bin/wya --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch",
    "all": "npm-run-all --parallel --race --continue-on-error lint:watch serve"
  },
  "author": "wya-team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wya-team/wya-toolkit"
  },
  "bugs": {
    "url": "https://github.com/wya-team/wya-toolkit/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "connect": "^3.7.0",
    "connect-history-api-fallback": "^1.6.0",
    "fs-extra": "^9.0.0",
    "inquirer": "^7.1.0",
    "ora": "^4.0.3",
    "request": "^2.88.2",
    "screenshot-desktop": "^1.12.0",
    "serve-index": "^1.9.1",
    "serve-static": "^1.14.1",
    "shelljs": "^0.8.2",
    "upath": "^1.2.0",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-proposal-function-bind": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-watch": "^6.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "prompt": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "./bin/wya lint --mode commit"
    }
  },
  "lint-staged": {
    "{src,bin}/**/*": [
      "esw --fix",
      "git add"
    ],
    "*.md": [
      "esw --ext '.md' --fix",
      "git add"
    ]
  },
  "bin": {
    "wya": "bin/wya"
  }
}
