{
  "name": "wya-toolkit",
  "version": "0.1.8",
  "description": "wya-toolkit for js",
  "main": "index.js",
  "files": [
    "commands/**",
    "src/**",
    "bin/**",
    "keys/**",
    "templates/**"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run all",
    "serve": "rm -rf ./commands && cross-env NODE_ENV=development babel src --out-dir commands --watch",
    "build": "rm -rf ./commands && npm run lint:fix && cross-env NODE_ENV=production babel src --out-dir commands && npm publish",
    "lint": "esw ./src/ ./bin/wya",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --fix --watch",
    "all": "npm-run-all --parallel --race --continue-on-error lint:watch serve",
    "lint-staged": "lint-staged"
  },
  "author": "wya-team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wya-team/wya-toolkit"
  },
  "bugs": {
    "url": "https://github.com/wya-team/wya-toolkit/issues"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.1",
    "connect": "^3.6.6",
    "connect-history-api-fallback": "^1.5.0",
    "download-git-repo": "^1.0.2",
    "fs-extra": "^5.0.0",
    "inquirer": "^5.2.0",
    "ora": "^2.0.0",
    "serve-index": "^1.9.1",
    "serve-static": "^1.13.2",
    "upath": "^1.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.13.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-watch": "^3.1.3",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.2",
    "pre-commit": "^1.2.2",
    "prompt": "^1.0.0",
    "rimraf": "^2.6.1"
  },
  "lint-staged": {
    "{src,bin}/**/*": [
      "esw --fix",
      "git add"
    ],
    "*.md": [
      "esw --ext '.md' --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "bin": {
    "wya": "bin/wya"
  }
}
